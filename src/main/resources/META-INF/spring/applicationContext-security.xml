<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security" 
    xmlns:beans="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-5.6.xsd">

	<!-- HTTP security configurations -->
	<http auto-config="true" use-expressions="true" pattern="/**">
		<form-login login-processing-url="/resources/j_spring_security_check"
			login-page="/login" 
			username-parameter="j_username"
			password-parameter="j_password" 
			authentication-success-handler-ref="postSuccessAuthHandler"
			authentication-failure-url="/login?login_error=t" />
		<logout logout-url="/resources/j_spring_security_logout" />
		<csrf disabled="true"/>
		<!-- Configure these elements to secure URIs in your application -->
		<intercept-url pattern="/api/admin/**" access="hasRole('ROLE_ADMIN')" />
		<intercept-url pattern="/resources/j_spring_security_check" access="permitAll" method="POST" />
		<intercept-url pattern="/resources/j_spring_security_logout" access="permitAll" />
		<intercept-url pattern="/resources/**" access="permitAll" />
		<intercept-url pattern="/login/**" access="permitAll" />
		<intercept-url pattern="/**" access="permitAll" />
	</http>

	<beans:bean id="postSuccessAuthHandler"
		class="com.labsynch.labseer.service.PostSuccessfulAuthenticationHandler">
	</beans:bean>

	<!-- Configure Authentication mechanism -->
	<beans:bean
		class="com.labsynch.labseer.service.ACASAuthenticationProvider"
		id="acasAuthenticationProvider">
		<beans:property name="adminUser" value="admin" />
		<beans:property name="adminPassword" value="0DPiKuNIrrVmD8IUCuw1hQxNqZc=" />
	</beans:bean>

	<authentication-manager alias="authenticationManager">
		<authentication-provider ref="acasAuthenticationProvider" />
	</authentication-manager>

	<!-- Configure firewall -->
	<!-- Note, we should remove this, this allows // in url and normalizes the url -->
	<!-- Default is strict matching but there are logs of places in ACAS which sent // in the url -->
	<beans:bean 
		id="ACASHttpFirewall" class="com.labsynch.labseer.utils.ACASHttpFirewall">
	</beans:bean>
	<http-firewall ref="ACASHttpFirewall"/>

	
